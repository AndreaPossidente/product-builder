{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/styles/*": ["./styles/*"],
      "@/styles": ["./styles"],
      "@/fonts": ["./styles/fonts"],
      "@/components/*": ["./components/*"],
      "@/components": ["./components"],
      "@/hooks/*": ["./hooks/*"],
      "@/hooks": ["./hooks"],
      "@/store": ["./store"],
      "@/contexts": ["./contexts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
